{
  "name": "@kilimo/db",
  "version": "0.1.0",
  "main": "./index.ts",
  "types": "./index.ts",
  "license": "MIT",
  "prisma": {
    "schema": "prisma/schema.prisma"
  },
  "scripts": {
    "clean": "rm -rf .turbo node_modules",
    "lint": "eslint .",
    "format": "prettier --check \"**/*.{mjs,ts,md,json}\"",
    "push": "prisma db push",
    "push:local": "DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:54322/postgres DIRECT_URL=postgresql://postgres:postgres@127.0.0.1:54322/postgres prisma db push",
    "studio": "prisma studio",
    "studio:local": "DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:54322/postgres prisma studio",
    "generate": "prisma generate",
    "postinstall": "prisma generate",
    "db:push:local": "DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:54322/postgres DIRECT_URL=postgresql://postgres:postgres@127.0.0.1:54322/postgres pnpm prisma db push",
    "db:seed:local": "PGPASSWORD=postgres psql -h 127.0.0.1 -p 54322 -U postgres -d postgres -f ../../supabase/test-seed.sql",
    "db:studio:local": "DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:54322/postgres pnpm prisma studio",
    "db:reset:local": "pnpm -r --filter supabase run supabase:stop || true && pnpm -r --filter supabase run supabase:start || true && sleep 8 && pnpm run db:push:local && pnpm run db:seed:local"
  },
  "dependencies": {
    "@prisma/client": "^5.17.0",
    "@prisma/extension-accelerate": "^1.1.0",
    "@t3-oss/env-nextjs": "^0.7.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "prisma": "^5.6.0",
    "typescript": "^5.1.6",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0"
  }
}
